<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewVidToplivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="A91"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLitr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.2"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/textViewVidToplivo"
        app:layout_constraintEnd_toStartOf="@id/textViewSumma"
        app:layout_constraintStart_toEndOf="@id/textViewVidToplivo"
        app:layout_constraintTop_toTopOf="@id/textViewVidToplivo" />

    <TextView
        android:id="@+id/textViewSumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/textViewVidToplivo"
        app:layout_constraintEnd_toStartOf="@id/textViewBonus"
        app:layout_constraintStart_toEndOf="@id/textViewLitr"
        app:layout_constraintTop_toTopOf="@id/textViewVidToplivo" />

    <TextView
        android:id="@+id/textViewBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:text="14"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textViewVidToplivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewVidToplivo" />


</androidx.constraintlayout.widget.ConstraintLayout>