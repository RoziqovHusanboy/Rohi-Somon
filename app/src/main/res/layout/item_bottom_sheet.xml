<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bottom_sheet_background">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_bottom_sheet_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />
    
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="№1 (Котма)"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDistance"
        app:layout_constraintTop_toTopOf="@id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="4 км"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginEnd="27dp"
        />

    <TextView
        android:id="@+id/textViewAdress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/item_bottom_sheet_desc"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    <ImageView
        android:id="@+id/imageViewIconDt"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_bottom_sheet_ic_91"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image95"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_bottom_sheet_ic_95"
        app:layout_constraintStart_toEndOf="@id/imageViewIconDt"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress" />

    <ImageView
        android:id="@+id/imageGaz"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_bottom_sheet_ic_gaz"
        app:layout_constraintStart_toEndOf="@id/image95"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress" />

    <ImageView
        android:id="@+id/imageDt"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_bottom_sheet_ic_dt"
        app:layout_constraintStart_toEndOf="@id/imageGaz"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress" />

    <ImageView
        android:id="@+id/imageDTE"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_bottom_sheet_ic_dte"
        app:layout_constraintStart_toEndOf="@id/imageDt"
        app:layout_constraintTop_toBottomOf="@id/textViewAdress" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageDTE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:text="Проложить маршрут"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="56dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:background="@drawable/item_bottom_sheet_bottom__background"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
